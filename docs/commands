# Create/Update database schema
php app/console doctrine:schema:update --dump-sql --force

# Create/Update getter and setters
php app/console doctrine:generate:entities LaDanse/DomainBundle/Entity --no-backup

# Run PHP 5.4 server
php app/console server:run

# Create symlinks to assets
php app/console assets:install web --symlink

clear ; php app/console ladanse:notifyEventToday ; php app/console ladanse:queue:notifications --process ; php app/console swiftmailer:spool:send
