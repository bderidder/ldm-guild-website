<script>

    PostComponent.prototype = new UIComponent();
    PostComponent.prototype.constructor = PostComponent;

    function PostComponent(post)
    {
        UIComponent.prototype.constructor.call(this);

        this.post = post;
    };

    PostComponent.prototype.render = function()
    {
        var viewData = {
            containerId: this.id,
            post: this.post
        };

        var html = this.renderTemplate("#PostComponent-post-template", viewData);

        return html;
    }

</script>

{% verbatim %}

<script id="PostComponent-post-template" type="text/template">

    <b>{{ post.poster }}</b> {{ post.postDate }} - {{ post.message }}

</script>

{% endverbatim %}