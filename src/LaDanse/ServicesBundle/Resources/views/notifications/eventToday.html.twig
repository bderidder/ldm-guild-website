{% extends 'LaDanseServicesBundle:notifications:layout.html.twig' %}

{% block stylesheet %}

<style>

    p.event-label
    {
        font-weight: bold;
    }

</style>

{% endblock %}

{% block notificationMessage %}

    <p style="font-size: 2em; font-weight: bold">Reminder</p>

    <p>Don't forget, the event '{{ data.activityData.event.name }}' you signed up for is TODAY!</p>

    <div class="PostContent">

        <table cellspacing="10" >
            <tr>
                <td align="center">
                    <p class="event-label">When</p>
                    <p>{{ data.activityData.event.inviteTime|date("d/m (D)", "Europe/Paris") }}</p>
                </td>
                <td align="center">
                    <p class="event-label">Invite Time</p>
                    <p>{{ data.activityData.event.inviteTime|date("H:i", "Europe/Paris") }}</p>
                </td>
                <td align="center">
                    <p class="event-label">Start Time</p>
                    <p>{{ data.activityData.event.startTime|date("H:i", "Europe/Paris") }}</p>
                </td>
                <td align="center">
                    <p class="event-label">End Time</p>
                    <p>{{ data.activityData.event.endTime|date("H:i", "Europe/Paris") }}</p>
                </td>
            </tr>
        </table>

        <br/>
        <div>
            {{ data.activityData.event.description }}
        </div>

        <br/>
        <div style="color: bold; font-weight: bold;">
            Make sure to properly prepare yourself. Read up on tactics and bring flasks, pots and runes with you!
        </div>

    </div>

{% endblock %}

{% block notificationActions %}

    <a href="{{ url('eventsIndex') }}#/events/event/{{ data.activityData.event.id }}">
        <div class="button btn-lightGreen">
            manage my signup
        </div>
    </a>

{% endblock %}