{% extends 'LaDanseServicesBundle:notifications:layout.html.twig' %}

{% block stylesheet %}

<style>

    p.event-label
    {
        font-weight: bold;
    }

</style>

{% endblock %}

{% block notificationMessage %}

    <p style="font-size: 2em; font-weight: bold">Cancelled!</p>

    <p>The organiser of the event '{{ data.activityData.newEvent.name }}' you signed up for, cancelled the event!</p>

    <div class="PostContent">

        <table cellspacing="10" >
            <tr>
                <td align="center">
                    <p class="event-label">When</p>
                    <p>{{ data.activityData.newEvent.inviteTime|date("d/m (D)") }}</p>
                </td>
                <td align="center">
                    <p class="event-label">Invite Time</p>
                    <p>{{ data.activityData.newEvent.inviteTime|date("H:i") }}</p>
                </td>
                <td align="center">
                    <p class="event-label">Start Time</p>
                    <p>{{ data.activityData.newEvent.startTime|date("H:i") }}</p>
                </td>
                <td align="center">
                    <p class="event-label">End Time</p>
                    <p>{{ data.activityData.newEvent.endTime|date("H:i") }}</p>
                </td>
            </tr>
        </table>

        <br/>
        <div>
            {{ data.activityData.newEvent.description }}
        </div>

    </div>

{% endblock %}

{% block notificationActions %}

    <a href="{{ url('eventsIndex') }}#/events/event/{{ data.activityData.newEvent.id }}">
        <div class="button btn-lightGreen">
            view event
        </div>
    </a>

{% endblock %}