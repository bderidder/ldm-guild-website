{% extends 'LaDanseSiteBundle:layout:page-centered.html.twig' %}

{% block title %}My Settings - La Danse Macabre{% endblock %}

{% block memberPageCenteredBody %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <div id="SettingsLinks">
                    <a class="settings-link" href="{{ path('editProfile') }}">
                        <div id="settingsProfileLink" class="settings-link-container">
                            <p><i class="fa fa-gears"></i> Profile </p>
                        </div>
                    </a>
                    <a class="settings-link" href="{{ path('changePassword') }}">
                        <div id="settingsPasswordLink" class="settings-link-container">
                            <p><i class="fa fa-key"></i> Password</p>
                        </div>
                    </a>
                    <a class="settings-link" href="{{ path('editCalExport') }}">
                        <div id="settingsCalExportLink" class="settings-link-container">
                            <p><i class="fa fa-calendar"></i> Calendar</p>
                        </div>
                    </a>
                    <a class="settings-link" href="{{ path('editNotifications') }}">
                        <div id="settingsNotificationsLink" class="settings-link-container">
                            <p><i class="fa fa-envelope"></i> Notifications</p>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-md-10">
            	<div id="SettingsPane">
                	
                    {% block settingsPanel %}{% endblock %}
                    
            	</div>
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheet %}

    {# make sure that any other content of this tag is rendered as well #}
    {{ parent() }}

    <style>

        #SettingsLinks
        {
            margin-top: 10px;
        }

        #SettingsPane
        {
            border-left: 1px solid #777777;
            padding-left: 20px;
        }

        #SettingsPane h1
        {
            padding-top: 0px;
            margin-top: 0px;
        }

        .settings-link-container
        {
            width: 100%;

            -moz-border-top-left-radius: 5px;
            border-top-left-radius: 5px;
            -moz-border-top-right-radius: 5px;
            border-top-right-radius: 5px;
            -moz-bottom-top-left-radius: 5px;
            border-bottom-left-radius: 5px;
            -moz-bottom-top-right-radius: 5px;
            border-bottom-right-radius: 5px;

            border-top-left-radius: 5px;
            border-top-right-radius: 5px;
            border-bottom-right-radius: 5px;
            border-bottom-left-radius: 5px;
        }

        .settings-link-container:hover
        {
            background-color: #00a300;
        }

        .settings-link-container p
        {
            padding: 4px;
        }

        .settings-link, .settings-link:hover
        {
            color: black;
            text-decoration: none;
        }

    </style>

{% endblock %}
