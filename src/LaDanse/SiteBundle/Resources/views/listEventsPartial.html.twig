    <table cellpadding=5>
    {% for event in events %}
        <tr>
            <td>
                {% if event.isOrganiser %}
                O
                {% endif %}
            </td>
            <td><a href="{{ path('viewEventIndex', {'id': event.id}) }}">{{ event.name }}</a></td>
            <td>{{ event.inviteTime|date("d/m") }} at {{ event.inviteTime|date("H:i") }}</td>
            <td>
                {% if event.signUps.currentUserSignedUp %}
                X
                {% endif %}
            </td>
            <td>
                {% if event.signUps.signUpCount == 0 %}
                    there are no sign ups yet
                {% elseif event.signUps.signUpCount == 1 %}
                    1 person signed up
                {% else %}
                    {{ event.signUps.signUpCount }} persons signed up
                {% endif %}
            </td>
            <td>
                {% if event.signUps.absentCount == 0 %}
                    no people informed us they can't come
                {% elseif event.signUps.absentCount == 1 %}
                    1 person notified he or she can't come
                {% else %}
                    {{ event.signUps.absentCount }} persons notified they can't come
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </table>