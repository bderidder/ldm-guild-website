{% extends 'LaDanseSiteBundle:layout:bare.html.twig' %}

{% block title %}La Danse Macabre{% endblock %}

{% block body %}

	<style>

		a div.tile:hover
		{
			background-color: rgba(75, 75, 75, .95);
			outline: #999999 solid 3px;
		}

		.tile
		{
            height: 100%;
			background-color: rgba(75, 75, 75, .8);
			
			position: relative;
			float: left;
			margin-left: 15px;
			margin-top: 15px;
		}

		.tile.default
		{
			width: 150px;
			height: 150px;
		}

		.tile.double
		{
			width: 300px;
			height: 150px;
		}

		.tile.triple
		{
			width: 380px;
			height: 150px;
		}

		.tile-content
		{
			width: 100%;
            height: 100%;
			padding: 10px;
            position: absolute;
            top: 0;
            left: 0;
            display: none;
            overflow: hidden;
		}

        .tile.high
        {
            width: 150px;
            height: 300px;
        }

        .tile-content .image
        {
            padding-top: 20px;
            text-align: center;
        }

        .tile .label
        {
            position: absolute;
            left: 0px;
            bottom: 5px;
            font-size: 1em;
            font-weight: 300;
        }

        .tile .tile-content.label
        {
            position: absolute;
            left: 0px;
            bottom: -5px;
            font-size: 1em;
            font-weight: 300;
        }

        .tile p
        {
            font-weight: 300;
        }

        .jumbo
        {
            padding: 30px;
            padding-left: 0px;
            margin-top: 10px;
            margin-bottom: 20px;
            color: white;
        }

        .jumbo h1,
        .jumbo .h1
        {
            font-size: 63px;
        }

        .jumbo p
        {
            margin-bottom: 15px;
            font-size: 21px;
            font-weight: 200;
        }

        .tile-content-wrapper
        {
            position: absolute;
            height: 100%;
            width: 100%;
            display: none;
        }

        .ts-top-label
        {
            width: 100%;
            position: absolute;
            padding: 15px;
            padding-top: 20px;
        }

        .tile .tile-content-wrapper:nth-of-type(1)
        {
            display: block; 
        }

        .tile .tile-content:nth-of-type(1)
        {
            display: block; 
        }

        .tile-container a
        {
            color: white;
        }

	</style>

	<div class="container-fluid tile-container" style="padding: 0px; margin-top: 100px;">
		<div class="row">

            {% if auth.currentContext.authenticated %}
                <a href="{{ path('welcomeSettings') }}">
                    <div class="tile default">
                        <div class="tile-content">
                            <div class="image">
                              <i class="fa fa-user fa-5x"></i>  
                            </div>
                        </div>
                        <div class="label"><span>My Account</span></div>
                    </div>
                </a>
            {% else %}
                 <a href="{{ path('fos_user_security_login') }}">
                    <div class="tile default">
                        <div class="tile-content">
                            <div class="image">
                              <i class="fa fa-sign-in fa-5x"></i>  
                            </div>
                        </div>
                        <div class="label"><span>Log In</span></div>
                    </div>
                </a>
            {% endif %}

        </div> <!-- row -->

	</div> <!-- container -->

{% endblock %}

{% block javascript %}

<script>

$(document).ready(function()
{
    var clientsServiceURL = 'teamspeak/clients';

    $.when($.ajax({
        type: "GET",
        url: clientsServiceURL,
        contentType: "application/json; charset=utf-8",
        dataType: "json"
    })).then(tsClientsSuccessFunc, tsClientsErrorFunc);
});

</script>

{% endblock %}
