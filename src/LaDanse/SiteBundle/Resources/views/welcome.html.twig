{% extends 'LaDanseSiteBundle:layout:bare.html.twig' %}

{% block title %}La Danse Macabre{% endblock %}

{% block body %}

	<style>

		a div.tile:hover
		{
			background-color: rgba(75, 75, 75, .9);
			border: solid 2px gray;
		}

		.tile
		{
			background-color: rgba(75, 75, 75, .8);
			
			position: relative;
			float: left;
			margin-left: 15px;
			margin-top: 15px;
		}

		.tile.default
		{
			width: 150px;
			height: 150px;
		}

		.tile.double
		{
			width: 300px;
			height: 150px;
		}

		.tile.triple
		{
			width: 380px;
			height: 150px;
		}

		.tile-content
		{
			width: 100%;
			height: 100%;
			padding: 10px;
		}

        .tile.high
        {
            width: 150px;
            height: 300px;
        }

        .jumbotron
        {
            background-color: rgba(0, 0, 0, 0);
            border: none;
        }
	</style>
    
    <div class="jumbotron" >
      <div class="container-fluid">
        <h1>La Danse Macabre</h1>
        <p>Welcome to the website of La Danse Macabre, a guild on World of Warcraft (Defias Brotherhood), Star
            Wars the Old Repulic (The Progenitor) and WildStar (Nexus).</p>
      </div> <!-- container -->
    </div> <!-- jumbotron -->

	<div class="container-fluid">
		<div class="row">
            
            <a href="{{ path('calendarIndex') }}">
            	<div class="tile double">
            		<div class="tile-content">
                		<i class="fa fa-calendar fa-2x"></i>
                	</div>
                </div>
            </a>

        	<div class="tile default">
        		<div class="tile-content">
            		<i class="fa fa-picture-o fa-3x"></i>
            	</div>
            </div>

            <div class="tile default">
        		<div class="tile-content">
            		<i class="fa fa-headphones fa-3x"></i>
            	</div>
            </div>

            <a href="{{ path('fos_user_profile_show') }}">
                <div class="tile default">
            		<div class="tile-content">
                		<i class="fa fa-user fa-3x"></i>
                	</div>
                </div>
            </a>
            
        </div> <!-- row -->

        <div class="row">
            
            <a href="{{ path('viewClaims') }}">
            	<div class="tile default">
            		<div class="tile-content">
                		<i class="fa fa-users fa-3x"></i>
                	</div>
                </div>    
            </a>  

            <div class="tile double">
        		<div class="tile-content">
            		<i class="fa fa-comment fa-3x"></i>
            	</div>
            </div>   

            <div class="tile default">
        		<div class="tile-content">
            		<i class="fa fa-info-circle fa-3x"></i>
            	</div>
            </div>
            
        </div> <!-- row -->

	</div> <!-- container -->

{% endblock %}
