{% extends 'LaDanseSiteBundle:layout:layout.html.twig' %}

{% block title %}Sign up for event - La Danse Macabre{% endblock %}

{% block body %}

	<ol class="breadcrumb">
        <li><a href="{{ path('welcomeIndex') }}">Home</a></li>
        <li><a href="{{ path('viewEvent', {'id': event.id}) }}">Event '{{ event.name }}'</a></li>
        <li class="active">Sign Up</li>
    </ol>

    <h1>Sign up for '{{ event.name }}' on {{ event.startTime|date("D d/m") }}</h1>

    {{ form(form) }}

{% endblock %}