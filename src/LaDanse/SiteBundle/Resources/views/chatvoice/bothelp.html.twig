        div.BotHelpContainer
        {
        }

        div.BotHelpContainer p.BotCommandHeader
        {
            font-weight: bold;
            font-size: 1.2em;
        }

        div.BotHelpContainer div.BotExample
        {
            background-color: rgb(100, 100, 100);
            color: whitesmoke;
            padding: 10px 10px 10px 15px;
            margin: 20px 20px 20px 20px;
            max-width: 600px;
            border-radius: 15px;
        }

        div.BotHelpContainer div.BotExample p
        {
            padding: 0;
            margin: 0;
        }

        div.BotHelpContainer div.BotExample p.UserTag
        {
            font-weight: bold;
            font-size: 1.1em;
        }

    </style>

{% endblock %}
