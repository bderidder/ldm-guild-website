{% extends 'LaDanseSiteBundle:layout:page.html.twig' %}

{% block title %}La Danse Macabre{% endblock %}

{% block memberPageBody %}

	<style>

		a div.tile:hover
		{
			background-color: rgba(75, 75, 75, .95);
			outline: #999999 solid 3px;
		}

		.tile
		{
            height: 100%;
			background-color: rgba(75, 75, 75, .8);
			
			position: relative;
			float: left;
			margin-left: 15px;
			margin-top: 15px;
		}

		.tile.default
		{
			width: 150px;
			height: 150px;
		}

		.tile.double
		{
			width: 315px;
			height: 150px;
		}

		.tile-content
		{
			width: 100%;
            height: 100%;
			padding: 10px;
            position: absolute;
            top: 0;
            left: 0;
            display: none;
            overflow: hidden;
		}

        .tile-content .image
        {
            padding-top: 20px;
            text-align: center;
        }

        .tile .label
        {
            position: absolute;
            left: 0px;
            bottom: 5px;
            font-size: 1em;
            font-weight: 300;
        }

        .tile .tile-content.label
        {
            position: absolute;
            left: 0px;
            bottom: -5px;
            font-size: 1em;
            font-weight: 300;
        }

        .tile p
        {
            font-weight: 300;
        }

        .tile-content-wrapper
        {
            position: absolute;
            height: 100%;
            width: 100%;
            display: none;
        }

        .ts-top-label
        {
            width: 100%;
            position: absolute;
            padding: 15px;
            padding-top: 20px;
        }

        .tile .tile-content-wrapper:nth-of-type(1)
        {
            display: block; 
        }

        .tile .tile-content:nth-of-type(1)
        {
            display: block; 
        }

        .tile-container a
        {
            color: white;
            white-space: nowrap;
        }

        .tile-column
        {
            position: relative;
            float: left;
            margin-right: 110px;
        }

        .tile-column:last-child
        {
            margin-right: 0px;
        }

        .tile-container
        {
            display: inline-block;
            visibility: hidden;
        }

	</style>

    <div class="clearfix"></div>

