<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>{% block title %}La Danse - Welcome{% endblock %}</title>

    {# all CSS must be in the header to speed up rendering #}

    <link href="//netdna.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.css" rel="stylesheet">

    <link href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.2/themes/eggplant/jquery-ui.css"
          rel="stylesheet">

    <link href="//cdn.jsdelivr.net/qtip2/2.2.1/jquery.qtip.min.css" rel="stylesheet">

    <link href="//cdnjs.cloudflare.com/ajax/libs/angular-ui/0.4.0/angular-ui.min.css" rel="stylesheet">

    {% stylesheets filter='cssrewrite'
        'bundles/ladansebootstrap/less/themes/default/custom-bootstrap.less'
        'bundles/coderspottingtoastmessage/css/*'
        'bundles/ladansesite/css/*'
    %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}

    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}" />

    <style>

        body
        {
            background-image: url('{{ asset('bundles/ladansesite/images/background-hfc.jpg') }}');
        }

        [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
            display: none !important;
        }

    </style>

    {% block stylesheet %}{% endblock %}

</head>

<body class="">

    <div id="body-wrapper">

        <div id="content-wrapper">

            <div id="content-inner-wrapper">

                {% block body %}{% endblock %}

            </div>

        </div>

    </div>

    <div id="footer-wrapper">

        <div id="footer-inner-wrapper">

            Copyright Bavo De Ridder 2014. <a class="no-underline" href="{{ path('privacyPolicyIndex') }}">Site &amp; Privacy Policy</a>

        </div>

    </div>

    {% if auth.currentContext.authenticated %}
        <script type="text/javascript">
            var currentAccount = {
                id: {{ auth.currentContext.account.id }},
                username: '{{ auth.currentContext.account.username }}',
                displayName: '{{ auth.currentContext.account.displayName }}'
            };
        </script>
    {% endif %}

{# all Javascript is moved to the rear of the document to speed up rendering #}

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>

    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.6.0/moment.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.6.0/lang/en-gb.js"></script>

    <script src="//cdn.jsdelivr.net/qtip2/2.2.1/jquery.qtip.min.js"></script>

    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.3/angular.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.3/angular-animate.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.3/angular-route.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.3/angular-resource.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.12.0/ui-bootstrap-tpls.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular-sanitize.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/textAngular/1.2.2/textAngular.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-moment/0.8.3/angular-moment.min.js"></script>

    <!--CDN link for the latest TweenMax-->
    <script src="//cdnjs.cloudflare.com/ajax/libs/gsap/latest/TweenMax.min.js"></script>

{% javascripts '@CoderSpottingToastMessageBundle/Resources/public/js/*'
'@LaDanseBootstrapBundle/Resources/public/js/*'
'@LaDanseSiteBundle/Resources/public/js/*' %}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}

{{ renderToasts() }}

<script type="text/javascript">
    $( document ).ready(function()
    {
        $("[data-toggle='tooltip']").tooltip(
                {
                    'container':'body'
                }
        );
    });
</script>

<!--Start Cookie Script-->
<script type="text/javascript" charset="UTF-8" src="//cookie-script.com/s/87fe37ecdff92dbc44e2940b6ab78b73.js"></script>
<!--End Cookie Script-->

{% block javascript %}{% endblock %}

</body>
</html>